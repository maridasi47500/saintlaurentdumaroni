<%=form_with scope:"", model: answer, url: myclassifiedproduct_path(title: product.titre.parameterize, rubrique: "_pr", id: product.id), html: {id: "form_reply", enctype: "multipart/form-data", onsubmit:"$('#fingerprint').value='525535';"} do |form|%>
				 <div class="description">
					 <input type="hidden" name="subaction" value="doproposition">
					 <input type="hidden" name="fingerprint" id="fingerprint" value="0">
				<label style="">Email * :</label>
<div class="inputrow" style="">
	 <%=form.text_field "a_email", class: (!answer.errors[:a_email].blank? ? "field_error" : "button"), onfocus: "del_error(this.id)", id:"a_email" %>
	 <div id="error_a_email" class="error"><%=answer.errors.messages[:a_email][0]%></div>
</div>
<div class="break"></div>
				<label style="">Téléphone :</label>
<div class="inputrow" style="">
	 <%=form.text_field "a_telephone", class: "button", onfocus: "del_error(this.id)", id: "a_telephone", style:"width:30%"%>
	 <div id="error_a_telephone" class="error"></div>
</div>
<div class="break"></div>
				<label style="">Message * :</label>
<div class="inputrow" style="">
	 <%=form.text_area "a_message", class: (!answer.errors[:a_message].blank? ? "field_error" : "button"), onfocus: "del_error(this.id)", id: "a_message", rows: "10"%>
	 <div id="error_a_message" class="error"><%=answer.errors.messages[:a_message][0]%></div>
</div>
<div class="break"></div>
					 <div class="submit">
<input type="submit" id="btn_submit" class="button2" value="Envoyer"></div>
				 </div>
			 <%end%>